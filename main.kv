#: import Window kivy.core.window.Window
<ImageColorPicker>:
    MDGridLayout:
        cols:2
        MDBoxLayout:
            orientation:'vertical'
            spacing:'10sp'
            padding:[dp(15), dp(15), dp(15), dp(15)]
            MDLabel:
                text:'Main Colors'
                font_size:dp(25)
                bold:True
                padding:[dp(15), 0,0,0]
            MDBoxLayout:
                pos_hint:{'top':0.9, 'center_x':0.5}
                size_hint_y:None
                height:dp(64)
                spacing:'15sp'
                padding:[dp(5), dp(5), dp(5), dp(5)]
                ColorCard:
                    id:main_color_1
                    color:[0,0,1,1]
                ColorCard:
                    id:main_color_2
                    color:[0,0,1,1]
                ColorCard:
                    id:main_color_3
                    color:[0,0,1,1]
                ColorCard:
                    id:main_color_4
                    color:[0,0,1,1]
                ColorCard:
                    id:main_color_5
                    color:[0,0,1,1]
           
            ImageColor:
                padding:[dp(25), dp(25), dp(25), dp(25)]
                pos_hint:{'center_x':0.5, 'center_y':0.5}
                size_hint_y:None
                size_hint_x:None
                height:dp(350)
                width:dp(430)
                source:root.source
            MDRaisedButton:
                text:'select image'
                on_release:root.select_image()
                pos_hint:{'center_x':0.5}

            Widget:

        StackLayout:
            padding:[20, 30, 20, 20]
            spacing:20
            ColorCodes:
                color_label:root.rgb_color_label
                color:root.rgb_color
                declaration_lbl:'RGB'
            ColorCodes:
                color_label:root.hsv_color_label
                color:root.hsv_color
                declaration_lbl:'HSV'
            ColorCodes:
                color_label:root.hsl_color_label
                color:root.hsl_color
                declaration_lbl:'HLS'
            ColorCodes:
                color_label:root.hex_color_label
                color:root.hex_color
                declaration_lbl:'HEX'
                
                